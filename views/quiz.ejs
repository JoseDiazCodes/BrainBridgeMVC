<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Quiz</title>
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css"
		/>
		<link rel="stylesheet" href="/css/quiz.css" />
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
	</head>
	<body>
		<div class="app">
			<div class="sidebar">
				<div class="user">
					<div class="user-name">
						<p><strong>User Name</strong>: <%= user.userName %></p>
					</div>
					<div class="user-mail">
						<p><strong>Email</strong>: <%= user.email %></p>
					</div>
				</div>
				<div class="sidebar-menu">
					<a href="/profile" class="sidebar-menu__link active"
						>Create Your Questions</a
					>
					<a href="/dashboard/questions" class="sidebar-menu__link">Questions</a>
					<a href="/quiz/quiz" class="sidebar-menu__link">Quiz</a>
				</div>
				<label class="toggle">
					<input type="checkbox" />
					<span class="slider"></span>
				</label>
			</div>
			<div class="main">
				<div class="main-header">
					<div class="main-header__title">Dashboard</div>
					<div class="main-header__avatars"></div>
				</div>
				<div class="main-header-nav">
					<a href="/logout" class="nav-item">Logout</a>
				</div>
				<div class="main-content">
					<div class="main-content">
						<div class="content-box">
							<h2 class="content-heading">Quiz Generated:</h2>
							<div id="quizContainer">
								<ul class="questionsAnswers">
									<div id="correctCount">
										<p>Number of correct questions: <%= correctCount %> out of <%= totalCount %></p>
									</div>
									<% if (quiz.length > 0) { %>
										<% questionAnswer.forEach(function(qa) { %>
											<% qa.questionAnswer.forEach(function(quizItem, index) { %>
												<li>
													<p onclick="showAnswer(this)" 
													   class="<%= quizItem.isCorrect ? 'correct' : 'incorrect' %>">
													   <strong>Question:</strong> <%= quizItem.question %>
													</p>
													<p class="answer" style="display: none;">
													   <strong>Answer:</strong> <%= quizItem.answer %>
													</p>
													<!-- Form for marking a question as correct -->
													<div class="button-container">
														<form method="POST" action="/quiz/markQuestionAsCorrect/<%= qa._id %>/<%= quizItem._id %>/?_method=PUT">
															<input type="hidden" name="questionId" value="<%= quizItem._id %>">
															<button class="button" type="submit">Correct</button>
														</form>
														<!-- Form for deleting a question -->
														<form method="POST" action="/quiz/deleteQuestion/<%= qa._id %>/<%= quizItem._id %>/?_method=DELETE">
															<input type="hidden" name="questionId" value="<%= quizItem._id %>">
															<button class ="button" type="submit">Delete</button>
														</form>
													</div>

												</li>
											<% }); %>
										<% }); %>
									<% } else { %>
										<p>No questions available.</p>
									<% } %>
								</ul>
							</div>
						</div>
					</div>
					</div>
				</div>
			</div>
		</div>

		<!-- partial -->
		<!-- <script src="/js/logic.js"></script> -->
		<script src="/js/profile-script.js"></script>
	</body>
</html>
